# Orca Checkout Agent Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# ORCA CONFIGURATION (Recommended - New Orca Prefix)
# =============================================================================

# API Configuration
ORCA_ENDPOINT=https://api.orca.com
ORCA_API_KEY=your-orca-api-key-here
ORCA_TIMEOUT=30000

# Application Configuration
ORCA_LOG_LEVEL=INFO
ORCA_LOG_FORMAT=json
ORCA_DEPLOYMENT_MODE=sidecar
ORCA_ENVIRONMENT=production

# Database Configuration
ORCA_DATABASE_URL=postgresql://user:password@localhost:5432/orca_checkout
ORCA_DATABASE_POOL_SIZE=10
ORCA_DATABASE_MAX_OVERFLOW=20

# Redis Configuration
ORCA_REDIS_URL=redis://localhost:6379/0
ORCA_REDIS_POOL_SIZE=10
ORCA_REDIS_MAX_CONNECTIONS=20

# Monitoring Configuration
ORCA_ENABLE_METRICS=true
ORCA_METRICS_PORT=9090
ORCA_HEALTH_CHECK_INTERVAL=30

# Security Configuration
ORCA_JWT_SECRET=your-jwt-secret-here
ORCA_ENCRYPTION_KEY=your-encryption-key-here
ORCA_CORS_ORIGINS=https://app.orca.com,https://admin.orca.com

# Feature Flags
ORCA_ENABLE_ANALYTICS=true
ORCA_ENABLE_WEBHOOKS=true
ORCA_ENABLE_CACHING=true
ORCA_CACHE_TTL=300

# Performance Configuration
ORCA_MAX_WORKERS=4
ORCA_REQUEST_TIMEOUT=30
ORCA_RATE_LIMIT=1000

