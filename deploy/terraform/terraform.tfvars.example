# AltWallet Checkout Agent - Example Terraform Variables
# Copy this file to terraform.tfvars and customize the values

# General Configuration
project_name = "altwallet-checkout-agent"
environment  = "dev"
aws_region   = "us-west-2"

# VPC Configuration
create_vpc = true
vpc_cidr   = "10.0.0.0/16"

public_subnet_cidrs = [
  "10.0.1.0/24",
  "10.0.2.0/24"
]

private_subnet_cidrs = [
  "10.0.10.0/24",
  "10.0.20.0/24"
]

# SSL Certificate Configuration
create_ssl_certificate = false
domain_name           = "checkout.altwallet.com"
certificate_arn       = ""

# Route53 Configuration
create_route53_zone = false
route53_zone_id     = ""

# Container Configuration
container_image = "altwallet/checkout-agent"
container_tag   = "1.0.0"
task_cpu        = 1024
task_memory     = 2048
desired_count   = 2
log_level       = "INFO"
log_retention_in_days = 30

# RDS Configuration
create_rds                        = true
rds_engine_version                = "15.4"
rds_instance_class                = "db.t3.micro"
rds_allocated_storage             = 20
rds_max_allocated_storage         = 100
rds_database_name                 = "altwallet"
rds_username                      = "altwallet"
rds_password                      = "your-secure-password-here"
rds_backup_retention_period       = 7
rds_backup_window                 = "03:00-04:00"
rds_maintenance_window            = "sun:04:00-sun:05:00"

# ElastiCache Configuration
create_elasticache                    = true
elasticache_node_type                 = "cache.t3.micro"
elasticache_parameter_group_name      = "default.redis7"
elasticache_num_cache_nodes           = 2
elasticache_engine_version            = "7.0"
elasticache_snapshot_retention_limit  = 5
elasticache_snapshot_window           = "03:00-05:00"

# Secrets Configuration
database_url   = ""
redis_url      = ""
api_key        = "your-api-key-here"
jwt_secret     = "your-jwt-secret-here"
encryption_key = "your-encryption-key-here"

# Auto Scaling Configuration
enable_autoscaling           = false
min_capacity                 = 1
max_capacity                 = 10
target_cpu_utilization       = 70
target_memory_utilization    = 80

# Monitoring Configuration
create_sns_topic = true
alert_email      = "alerts@altwallet.com"
alarm_sns_topic_arn = ""

# Backup Configuration
enable_backup         = false
backup_schedule       = "0 2 * * *"
backup_retention_days = 7

# Security Configuration
enable_waf        = false
waf_web_acl_arn   = ""

# Cost Optimization
enable_spot_instances = false
spot_percentage      = 50
